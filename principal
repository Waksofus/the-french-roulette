#The French Roulette
#bibliothèques
from random import*

#PV des joueurs
PVJ1=3
PVJ2=3

def choix_balles(x):
    balles=[]
    nbchargées=randint(1,x-1)
    for i in range(x-nbchargées):
        balles.append(0)
    for i in range(nbchargées):
        balles.append(1)
    return balles

print(choix_balles(3))
